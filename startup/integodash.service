[Unit]
Description=Integodash Billing Dashboard
After=network.target

[Service]
User=integotec
Group=integotec
WorkingDirectory=/home/integotec/integodash

# Correctly call the python interpreter to run the script
# If you are using a virtual environment, the path should be /home/integotec/integodash/venv/bin/python
ExecStart=/usr/bin/python3 /home/integotec/integodash/main.py
Restart=always

[Install]
WantedBy=multi-user.target
